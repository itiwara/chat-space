.main_chat
  .main_chat_group_info
    .group_data
      .group_data_name
        = @group.name
      .group_data_member
        Memberï¼š
        .group_data_member_detail
          - @group.users.each do |user|
            = user.name
    .group_edit
      = link_to edit_group_path(@group) ,class: "content__edit" do
        Edit

  .main_chat_message_list
    = render @messages

  .main_chat_message_form
    = form_for [@group, @message] do |f|
      .message_form_contents
        = f.text_field :content, class: 'comment', placeholder: 'type a message'
        .message_form_contents_image 
          = f.label :image, class: 'image_photo' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden '
        = f.submit 'Send', class: 'content_send'

